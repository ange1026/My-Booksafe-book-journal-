{% layout 'layout.liquid' %}
{% block content %}
<body class="loginbackground">
<div class="container-sm loginPage">
    <form action="/users/login" method="POST">
        <fieldset>
            <legend>Welcome Back, Please log in to continue</legend>
            <label class="form-label">Username: </label>
            <input type="text" name="username" placeholder="username" class="form-control loginForm" style="width:250px;" required>
            <label class="form-label">Password</label>
            <input type="password" name="password" placeholder="enter password" class="form-control loginForm" style="width:250px;" required>
        </fieldset>
        <input type="submit" value="Log In" class="btn mt-3">
    </form>
</div>
</body>
{% endblock %}