{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>{{ book.title }} </h2>
        <h3>{{ book.author }}</h3>
        <h4>
            {% if book.haveRead%}
            Finished
            {% else %}
            Not Finished
            {%endif%}
        </h2>
        <h6>{{ book.genre }}</h6>
        {% if book.owner == userId %}
        <div class="btn-group">

            <a href="/books/{{ book.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/books/{{ example.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}